          <td>{$notice.stopName}</td>
          <td>{$notice.stopId1}</td>
          <td>{$notice.csvRowNumberStop1}</td>
          <td>{$notice.stopId2}</td>
          <td>{$notice.csvRowNumberStop2}</td>
          <td>{$notice.routeId}</td>
          <td>{$notice.exampleTripId}</td>
